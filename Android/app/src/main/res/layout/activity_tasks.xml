<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.Tasks">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user"
                android:id="@+id/user_text"
                android:layout_weight="0.5"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score"
                android:id="@+id/score_text"
                android:layout_weight="0.5"
                android:textSize="16sp"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks"
            android:id="@+id/tasks_button"
            android:onClick="subtasks" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Tasks"
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Task"
            android:id="@+id/new_task_button"
            android:onClick="newTask" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks Waiting"
            android:id="@+id/textView4"
            android:textSize="26sp"
            android:textIsSelectable="false"
            android:gravity="center_horizontal" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:id="@+id/listView"
            android:fastScrollEnabled="false"
            android:fadeScrollbars="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks Finished"
            android:id="@+id/textView5"
            android:textSize="26sp"
            android:textIsSelectable="false"
            android:gravity="center_horizontal" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView2"
            android:fadeScrollbars="false" />

    </TableLayout>

</RelativeLayout>
